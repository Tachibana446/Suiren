<Window x:Class="Suiren.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Suiren"
        mc:Ignorable="d"
        Title="アカウント認証" Height="340.864" Width="475.415">
    <StackPanel>
        <TextBlock>以下のURLにアクセス</TextBlock>
        <Button x:Name="urlButton" Background="White" Click="urlButton_Click">
            <TextBlock Foreground="Blue" x:Name="link"></TextBlock>
        </Button>
        <TextBlock>表示されるPINを入力</TextBlock>
        <Border Margin="0" BorderThickness="2">
            <TextBox x:Name="textBox" Height="24" Width="auto"></TextBox>
        </Border>
        <Button Click="Button_Click">OK</Button>
    </StackPanel>
</Window>
