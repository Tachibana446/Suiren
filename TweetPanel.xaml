<UserControl x:Class="Suiren.TweetPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Suiren"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      >

    <DockPanel Width="400">
        <Image DockPanel.Dock="Left" Width="100" Height="100" Source="{Binding IconUrl}" />
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="{Binding UserNameAndScreenName}"></TextBlock>
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="{Binding Text}"></TextBlock>
    </DockPanel>
</UserControl>
